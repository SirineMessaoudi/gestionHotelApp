<h1>Recherche d'un Hotélier </h1>
<form action="" method="POST">
    Recherche : <input type="text" name="input_recherche"/>
    <input type="submit" name="rechercher" value="Rechercher"/>
</form>
{% if hoteliers is empty %}
    Aucun Hotelier trouvé
{% else %}
    <table border="1" >
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
        </tr>
        {% for hotelier in hoteliers %}
            <tr>
                <td>{{ hotelier.nom }}</td>
                <td>{{ hotelier.prenom }}</td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
