<h1>Recherche d'un Client </h1>
<form action="" method="POST">
    Recherche : <input type="text" name="input_recherche"/>
    <input type="submit" name="rechercher" value="Rechercher"/>
</form>
{% if clients is empty %}
    Aucun client trouv√©
{% else %}
    <table border="1" >
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
        </tr>
        {% for client in clients %}
            <tr>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
